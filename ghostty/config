# colors
theme = catppuccin-mocha
background = #11111b

# fonts
font-family = JetBrainsMono Nerd Font Mono
font-size = 22
window-title-font-family = JetBrainsMono Nerd Font Mono

# appearance
window-padding-x = 10
window-save-state = always

# misc
focus-follows-mouse = true
quit-after-last-window-closed = true
scrollback-limit = 100_000_000
confirm-close-surface = false
cursor-style-blink = false
cursor-style = block
shell-integration-features = no-cursor
cursor-color = #cdd6f4
cursor-text = #11111b

# macos specific options
macos-option-as-alt = right
macos-titlebar-style = tabs

# split navigation
keybind = cmd+h=goto_split:left
keybind = cmd+l=goto_split:right
keybind = cmd+j=goto_split:bottom
keybind = cmd+k=goto_split:top

# resize
keybind = cmd+ctrl+h=resize_split:left,40
keybind = cmd+ctrl+l=resize_split:right,40
keybind = cmd+ctrl+k=resize_split:up,40
keybind = cmd+ctrl+j=resize_split:down,40
keybind = cmd+ctrl+e=equalize_splits
keybind = cmd+space=toggle_split_zoom
keybind = cmd+enter=toggle_split_zoom
