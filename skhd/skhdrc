# map ctrl + [ to escape
ctrl - 0x21 : skhd -k "escape"

# open applications
alt - t : open -a "Ghostty"
alt - b : open -a "Zen Browser"
alt - d : open -a "Discord"
alt - s : open -a "Slack"
alt - f : open -a "Finder"
alt - m : open -a "Mail"

# use vim style delete previous word every where
ctrl - w -> [ 
  "kitty" : ~
  "Ghostty" : ~
  *       : skhd -k "alt - backspace"
]

# use zsh style go to end of word
ctrl - f -> [ 
  "kitty" : ~
  "Ghostty" : ~
  *       : skhd -k "alt - right"
]

# use vim style delete previous line every where
ctrl - u -> [ 
  "kitty" : ~
  "Ghostty" : ~
  *       : skhd -k "cmd - backspace"
]
